{
  "name": "eslint-config-cheminfo",
  "version": "12.0.1",
  "description": "Shared ESLint config for cheminfo and ml.js projects",
  "type": "module",
  "exports": {
    ".": "./cheminfo.js",
    "./base": "./base.js",
    "./jsdoc": "./jsdoc.js",
    "./unicorn": "./unicorn.js"
  },
  "files": [
    "cheminfo.js",
    "base.js",
    "jsdoc.js",
    "unicorn.js"
  ],
  "scripts": {
